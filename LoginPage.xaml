<Page x:Class="Site_2.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Site_2"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <Grid Margin="48,72,38,67">
        <Button x:Name="LoginBtn" Content="Войти" HorizontalAlignment="Left" Margin="105,114,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="3.73,0.546" Click="LoginBtn_Click"/>
        <Button x:Name="RegBtn" Content="Регистрация" HorizontalAlignment="Left" Margin="11,114,0,0" VerticalAlignment="Top" Width="89" Click="RegBtn_Click"/>
        <TextBox Name="Login" HorizontalAlignment="Left" Height="23" Margin="11,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
        <TextBox Name="Password" HorizontalAlignment="Left" Height="23" Margin="11,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="11,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="11,60,0,0" VerticalAlignment="Top" Width="60"/>

    </Grid>
</Page>
